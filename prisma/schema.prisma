datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Settings {
  id        String   @id @default(uuid())
  name      String   @unique
  value     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
}

model IT_Request {
  id                Int      @id @default(autoincrement())
  requesterName     String?
  requesterManager  String?
  department        String?
  location          String?
  software          String?
  Permissions       String?
  hardware          String?
  other             String?
  sharedFilesAccess String?
  justification     String?
  createdAt         DateTime @default(now())
}

model Notification {
  id        String   @id @default(uuid())
  title     String?
  message   String?
  type      String?
  read      Boolean? @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([type])
}
